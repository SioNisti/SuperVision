<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:widget="using:SuperVision.Widgets.GrindCoursePr"
             x:Class="SuperVision.Widgets.GrindCoursePr.GrindCoursePrView"
             x:DataType="widget:GrindCoursePrViewModel"
             HorizontalAlignment="Stretch">
    
    <Border Background="{Binding BgColor}" Padding="10,5">
        <TextBlock Text="{Binding GrindCoursePrs}" 
                   Foreground="{Binding FontColor}" 
                   FontSize="22"
                   FontFamily="Courier New"/>
    </Border>
</UserControl>